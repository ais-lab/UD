<robot name="pantilt">

  <material name="red" >
    <color rgba="0.7 0.0 0.7 1.0" />
  </material>
  <material name="blue" >
    <color rgba="0.0 0.7 0.7 1.0" />
  </material>
  <material name="green" >
    <color rgba="0.0 0.7 0.7 1.0" />
  </material>
  <material name="white" >
    <color rgba="0.7 0.7 0.7 1.0" />
  </material>


  <link name="base_link" >
  </link>
  <link name="dxl_case_link" >
   <visual>
     <origin xyz="0 0 0" rpy="0 0 0" />
     <geometry>
       <box size="0.07 0.085 0.065" />
     </geometry>
     <material name="red"/>
   </visual>
  </link>
  <link name="plate_link">
      <visual>
     <origin xyz="0 0 0" rpy="0 0 0" />
     <geometry>
       <box size="0.35 0.095 0.003" />
     </geometry>
     <material name="green"/>
   </visual>
  </link>
  <link name="projector_link">
       <visual>
     <origin xyz="0 0 0" rpy="0 0 0" />
     <geometry>
       <box size="0.24 0.17 0.07" />
     </geometry>
     <material name="white"/>
   </visual>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="dxl_case_link"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <joint name="pan_joint" type="revolute">
    <parent link="dxl_case_link"/>
    <child link="plate_link"/>
    <origin xyz="0 0 0.065" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit lower="0" upper="2" effort="1" velocity="1"/>
  </joint>
  <joint name="tilt_joint" type="revolute">
    <parent link="plate_link"/>
    <child link="projector_link"/>
    <origin xyz="0.0 0 0.17" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="0" upper="2" effort="1" velocity="1"/>
  </joint>
</robot>
