<robot name="UbiquitousDisplay">

  <material name="alumi" >
    <color rgba="0.7 0.7 0.7 1.0" />
  </material>

  <link name="base_link" >
  </link>
  <link name="base2pan_link" >
   <visual>
     <origin xyz="0 0 0" rpy="0 0 0" />
     <geometry>
       <box size="0.1 0.1 0.1" />
     </geometry>
     <material name="alumi"/>
   </visual>
  </link>
  <link name="pan2tilt_link">
      <visual>
     <origin xyz="0 0 0" rpy="0 0 0" />
     <geometry>
       <box size="0.2 0.5 0.1" />
     </geometry>
     <material name="alumi"/>
   </visual>
  </link>
  <link name="tilt2proj_link">
       <visual>
     <origin xyz="0 0 0" rpy="0 0 0" />
     <geometry>
       <box size="0.2 0.2 0.3" />
     </geometry>
     <material name="alumi"/>
   </visual>
  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base2pan_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0" />
  </joint>
  <joint name="pan_joint" type="revolute">
    <parent link="base2pan_link"/>
    <child link="pan2tilt_link"/>
    <origin xyz="0 0 0.5" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit lower="0" upper="2" effort="1" velocity="1"/>
  </joint>
  <joint name="tilt_joint" type="revolute">
    <parent link="pan2tilt_link"/>
    <child link="tilt2proj_link"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit lower="0" upper="2" effort="1" velocity="1"/>
  </joint>
</robot>
